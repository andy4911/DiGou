<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">  
<!-- 指定工作空间，要与接口名相同，源代码没有去看，猜测应该是通过"这里的namespace.下边方法的id"来定位方法的 -->  
<mapper namespace="com.digou.mapper.OrderMapper">  

	<insert id="insert" parameterType="com.digou.entity.Order" useGeneratedKeys="true" keyProperty="orderID">
		INSERT INTO OrderForm (orderID, cID, pID, createTime, orderPrice)
		VALUE (#{orderID}, #{cID}, #{pID}, #{createTime}, #{orderPrice})
	</insert>
	
	<select id="find" resultType="com.digou.entity.Order">
		SELECT * FROM OrderForm WHERE cID=#{0}
	</select>
	
</mapper>